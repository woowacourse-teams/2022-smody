{
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 90,
  "arrowParens": "always",
  "trailingComma": "all",
  "endOfLine": "auto",
  "singleQuote": true,
  "importOrder": [
    "^(@|hooks)(.*|$)",
    "^(@|pages)(.*|$)",
    "^(@|components/@shared)(.*|$)",
    "^(@|components)(.*|$)",
    "^(@|constants)(.*|$)",
    "^(@|styles)(.*|$)"
  ],
  "importOrderSeparation": true
}
